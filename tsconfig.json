{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Agregado para soportar alias
    "paths": {
      "@/*": ["src/*"] // Alias para las importaciones con @
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/app/api/**/*.ts",
    "src/app/api/**/*.tsx",
    "src/**/*.js", // Incluye archivos JS para que no haya problemas
    "src/**/*.jsx" // Incluye archivos JSX para que no haya problemas
, "src/context/AuthContext.js"  ],
  "exclude": [
    "node_modules"
  ]
}
